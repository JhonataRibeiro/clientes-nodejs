{
  "swagger": "2.0",
  "info": {
    "version": "1.0.0",
    "title": "Yet Another Node.js Blogg Application API",
    "description": "Yet Another Node.js Blogg Application API",
    "license": {
      "name": "MIT",
      "url": "https://opensource.org/licenses/MIT"
    }
  },
  "host": "localhost:3000",
  "basePath": "/",
  "tags": [
    {
      "name": "Users",
      "description": "API for users in the system"
    }
  ],
  "schemes": ["http"],
  "consumes": ["application/json"],
  "produces": ["application/json"],
  "paths": {
    "/clientes": {
      "post": {
        "tags": ["Clientes"],
        "description": "Cria novo cliente no sistema",
        "parameters": [
          {
            "name": "cliente",
            "in": "body",
            "description": "Usuário que deseja criar:",
            "schema": {
              "$ref": "#/definitions/Cliente"
            }
          }
        ],
        "produces": ["application/json"],
        "responses": {
          "200": {
            "description": "Novo usuario criado",
            "schema": {
              "$ref": "#/definitions/Cliente"
            }
          }
        }
      },
      "get": {
        "tags": ["Clientes"],
        "summary": "retorna todos os clientes do sistema",
        "responses": {
          "200": {
            "description": "OK",
            "schema": {
              "$ref": "#/definitions/Clientes"
            }
          }
        }
      }
    },
    "/clientes/{id}": {
      "parameters": [
        {
          "name": "id",
          "in": "path",
          "required": true,
          "description": "ID do usuário a ser deletado",
          "type": "string"
        }
      ],
      "get": {
        "tags": ["Clientes"],
        "summary": "Obter cliente pelo ID passado",
        "responses": {
          "200": {
            "description": "Cliente encontrado",
            "schema": {
              "$ref": "#/definitions/Cliente"
            }
          }
        }
      },
      "delete": {
        "summary": "Deleta um cliente dado um ID",
        "tags": ["Clientes"],
        "responses": {
          "200": {
            "description": "O cliente  foi deletado",
            "schema": {
              "$ref": "#/definitions/Cliente"
            }
          }
        }
      },
      "put": {
        "summary": "Atualiza um cliente dado um ID",
        "tags": ["Clientes"],
        "parameters": [
          {
            "name": "clientes",
            "in": "body",
            "description": "Cliente para atualizar",
            "schema": {
              "$ref": "#/definitions/Cliente"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Cliente é atualizado",
            "schema": {
              "$ref": "#/definitions/Cliente"
            }
          }
        }
      }
    }
  },
  "definitions": {
    "Cliente": {
      "required": ["nome"],
      "properties": {
        "nome": {
          "type": "string"
        },
        "email": {
          "type": "string"
        },
        "cep": {
          "type": "number"
        },
        "bairro": {
          "type": "string"
        },
        "agencias": {
          "type": "array",
          "$ref": "#/definitions/Agencia"
        }
      }
    },
    "User": {
      "required": ["email", "_id"],
      "properties": {
        "_id": {
          "type": "string",
          "uniqueItems": true
        },
        "email": {
          "type": "string",
          "uniqueItems": true
        },
        "lastName": {
          "type": "string"
        },
        "firstName": {
          "type": "string"
        }
      }
    },
    "Users": {
      "type": "array",
      "$ref": "#/definitions/User"
    },
    "Clientes": {
      "type": "array",
      "$ref": "#/definitions/Cliente"
    },
    "Agencia": {
      "bairro": {
        "type": "string"
      },
      "agencia": {
        "type": "number"
      },
      "conta": {
        "type": "number"
      }
    }
  }
}
