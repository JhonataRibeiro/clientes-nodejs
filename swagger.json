{
  "swagger": "2.0",
  "info": {
    "version": "1.0.0",
    "title": "API de Cliente",
    "description": "API para clientes dos bancos",
    "license": {
      "name": "MIT",
      "url": "https://opensource.org/licenses/MIT"
    }
  },
  "host": "localhost:3000",
  "basePath": "/",

  "schemes": ["http"],
  "consumes": ["application/json"],
  "produces": ["application/json"],
  "paths": {
    "/clientes": {
      "post": {
        "tags": ["Clientes"],
        "description": "Cria novo cliente no sistema",
        "parameters": [
          {
            "name": "cliente",
            "in": "body",
            "description": "Usuário que deseja criar:",
            "schema": {
              "$ref": "#/definitions/Cliente"
            }
          }
        ],
        "produces": ["application/json"],
        "responses": {
          "200": {
            "description": "Novo usuario criado",
            "schema": {
              "$ref": "#/definitions/Cliente"
            }
          }
        }
      },
      "get": {
        "tags": ["Clientes"],
        "summary": "retorna todos os clientes do sistema",
        "responses": {
          "200": {
            "description": "OK",
            "schema": {
              "$ref": "#/definitions/Clientes"
            }
          }
        }
      }
    },
    "/clientes/{id}": {
      "parameters": [
        {
          "name": "id",
          "in": "path",
          "required": true,
          "description": "ID do usuário a ser deletado",
          "type": "string"
        }
      ],
      "get": {
        "tags": ["Clientes"],
        "summary": "Obter cliente pelo ID passado",
        "responses": {
          "200": {
            "description": "Cliente encontrado",
            "schema": {
              "$ref": "#/definitions/Cliente"
            }
          }
        }
      },
      "delete": {
        "summary": "Deleta um cliente dado um ID",
        "tags": ["Clientes"],
        "responses": {
          "200": {
            "description": "O cliente  foi deletado",
            "schema": {
              "$ref": "#/definitions/Cliente"
            }
          }
        }
      },
      "put": {
        "summary": "Atualiza um cliente dado um ID",
        "tags": ["Clientes"],
        "parameters": [
          {
            "name": "clientes",
            "in": "body",
            "description": "Cliente para atualizar",
            "schema": {
              "$ref": "#/definitions/Cliente"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Cliente é atualizado",
            "schema": {
              "$ref": "#/definitions/Cliente"
            }
          }
        }
      }
    },
    "/agencias": {
      "post": {
        "tags": ["Agencias"],
        "description": "Cria nova agência no sistema",
        "parameters": [
          {
            "name": "agencia",
            "in": "body",
            "description": "Agência que deseja criar:",
            "schema": {
              "$ref": "#/definitions/Agencia"
            }
          }
        ],
        "produces": ["application/json"],
        "responses": {
          "200": {
            "description": "Nova agência criada",
            "schema": {
              "$ref": "#/definitions/Agencia"
            }
          }
        }
      },
      "get": {
        "tags": ["Agencias"],
        "summary": "retorna todas as agências do sistema",
        "responses": {
          "200": {
            "description": "OK",
            "schema": {
              "$ref": "#/definitions/Agencias"
            }
          }
        }
      }
    },
    "/agencias/{id}": {
      "parameters": [
        {
          "name": "id",
          "in": "path",
          "required": true,
          "description": "ID da agência a ser criada",
          "type": "string"
        }
      ],
      "get": {
        "tags": ["Agencias"],
        "summary": "Obter agências pelo ID",
        "responses": {
          "200": {
            "description": "Agências encontrada",
            "schema": {
              "$ref": "#/definitions/Agencia"
            }
          }
        }
      },
      "delete": {
        "summary": "Deleta uma agências dado um ID",
        "tags": ["Agencias"],
        "responses": {
          "200": {
            "description": "A agencias foi deletada",
            "schema": {
              "$ref": "#/definitions/Agencias"
            }
          }
        }
      },
      "put": {
        "summary": "Atualiza uma agência dado um ID",
        "tags": ["Agencias"],
        "parameters": [
          {
            "name": "agencias",
            "in": "body",
            "description": "Agencia para atualizar",
            "schema": {
              "$ref": "#/definitions/Agencia"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Agência é atualizada",
            "schema": {
              "$ref": "#/definitions/Agencia"
            }
          }
        }
      }
    }
  },
  "definitions": {
    "Cliente": {
      "required": ["nome"],
      "properties": {
        "nome": {
          "type": "string"
        },
        "email": {
          "type": "string"
        },
        "cep": {
          "type": "number"
        },
        "bairro": {
          "type": "string"
        },
        "agencias": {
          "type": "array",
          "$ref": "#/definitions/Agencia"
        }
      }
    },
    "Clientes": {
      "type": "array",
      "$ref": "#/definitions/Cliente"
    },
    "Agencia": {
      "bairro": {
        "type": "string"
      },
      "agencia": {
        "type": "number"
      },
      "conta": {
        "type": "number"
      }
    }
  }
}
